{
  "name": "mcpmarket",
  "version": "1.0.0",
  "description": "A collection of MCP servers for Minecraft",
  "private": true,
  "workspaces": [
    "packages/*",
    "!**/test/**"
  ],
  "engines": {
    "node": ">=16",
    "pnpm": ">=8"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "test": "pnpm run test --filter ./packages/*",
    "build": "pnpm run build --filter ./packages/*",
    "clean": "pnpm run clean --filter ./packages/*",
    "list": "pnpm list --recursive",
    "publish:all": "pnpm publish -r --access public",
    "publish:single": "pnpm publish --filter @mcpmarket/{package} --access public",
    "version:all": "pnpm version:bump -r",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && pnpm publish:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CherryHQ/mcpmarket.git"
  },
  "keywords": [
    "minecraft",
    "mcp",
    "server"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CherryHQ/mcpmarket/issues"
  },
  "homepage": "https://github.com/CherryHQ/mcpmarket#readme",
  "packageManager": "pnpm@10.4.1+sha512.c753b6c3ad7afa13af388fa6d808035a008e30ea9993f58c6663e2bc5ff21679aa834db094987129aa4d488b86df57f7b634981b2f827cdcacc698cc0cfb88af",
  "devDependencies": {
    "@changesets/cli": "^2.28.1"
  }
}
